generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "mysql"
}

model User {
  id            String             @id @default(ulid())
  username      String?            @unique @db.VarChar(50)
  name          String             @db.VarChar(100)
  password      String?            @db.VarChar(255)
  role          UserRole
  createdAt     DateTime           @default(now()) @map("created_at")
  updatedAt     DateTime           @updatedAt @map("updated_at")
  timezone      String             @default("Africa/Cairo")
  attendance    AttendanceRecord[]
  studentGroups GroupStudent[]
  profile       UserProfile?
  tutorGroups   Group[]

  @@index([role])
  @@map("users")
}

model UserProfile {
  userId String  @id @map("user_id")
  notes  String? @db.Text
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_profiles")
}

model Group {
  id           String             @id @default(ulid())
  name         String             @db.VarChar(100)
  description  String?            @db.VarChar(500)
  tutorId      String             @map("tutor_id")
  status       GroupStatus        @default(ACTIVE)
  createdAt    DateTime           @default(now()) @map("created_at")
  updatedAt    DateTime           @updatedAt @map("updated_at")
  timezone     String             @default("Africa/Cairo")
  scheduleDays GroupScheduleDay[]
  students     GroupStudent[]
  sessions     Session[]

  //  we should have relation for tutor and user
  tutor User @relation(fields: [tutorId], references: [id], onDelete: Cascade)

  @@index([tutorId])
  @@index([status])
  @@map("groups")
}

model GroupScheduleDay {
  groupId         String @map("group_id")
  dayOfWeek       Int    @map("day_of_week") @db.UnsignedTinyInt
  startMinutes    Int    @map("start_minutes") @db.UnsignedSmallInt
  durationMinutes Int    @map("duration_minutes") @db.UnsignedSmallInt
  group           Group  @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@id([groupId, dayOfWeek])
  @@map("group_schedule_days")
}

model GroupStudent {
  groupId  String   @map("group_id")
  userId   String   @map("user_id")
  joinedAt DateTime @default(now()) @map("joined_at")
  group    Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([groupId, userId])
  @@index([userId])
  @@map("group_students")
}

model Session {
  id         String             @id @default(ulid())
  groupId    String             @map("group_id")
  startedAt  DateTime
  status     SessionStatus
  notes      String?            @db.Text
  createdAt  DateTime           @default(now()) @map("created_at")
  updatedAt  DateTime           @updatedAt @map("updated_at")
  attendance AttendanceRecord[]
  group      Group              @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@index([groupId])
  @@index([startedAt])
  @@index([status])
  @@map("sessions")
}

model AttendanceRecord {
  id        String           @id @default(ulid())
  sessionId String           @map("session_id")
  userId    String           @map("user_id")
  status    AttendanceStatus
  notes     String?          @db.Text
  createdAt DateTime         @default(now()) @map("created_at")
  updatedAt DateTime         @updatedAt @map("updated_at")
  session   Session          @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([sessionId, userId])
  @@index([userId])
  @@index([status])
  @@map("attendance_records")
}

enum UserRole {
  ADMIN
  MODERATOR
  TUTOR
  STUDENT
}

enum GroupStatus {
  ACTIVE
  INACTIVE
  COMPLETED
}

enum SessionStatus {
  RESCHEDULED
  COMPLETED
  CANCELED
  MISSED
}

enum AttendanceStatus {
  ATTENDED
  MISSED
  EXCUSED
}
